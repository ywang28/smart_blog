<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Smart Blog", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if session[:user_id]==nil %>
            <li><%= link_to "Login", login_users_path %></li>
            <li><%= link_to "Register now", new_user_path %></li>
            <li><%= link_to "Users", users_path %></li>
          <% else %>
            <li><a href="#" id="welcome">Hello <%= User.find(session[:user_id]).last_name %>!</a></li>
            <li><%= link_to "Home", user_photos_path(session[:user_id]) %></li>
            <li><%= link_to "Users", users_path %></li>
            <li><%= link_to "Logout", "/users/logout" %></li>
          <% end %> 
        </ul>
      </nav>
    </div>
  </div>
</header>